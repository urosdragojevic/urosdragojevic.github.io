---
import { useTranslations } from "../i18n/utils";
import LanguagePicker from "./LanguagePicker.astro";
const [, lang] = Astro.url.pathname.split("/");
const t = useTranslations(lang as "en" | "sr");
---

<header
  class="h-1/5 flex flex-col md:items-center md:flex-row md:justify-around my-10 lg:my-10"
>
  <a class="font-mono font-bold text-3xl dark:text-white" href="/en/"
    >{t("home.logo")}</a
  >
  <LanguagePicker languageLabel={t("home.languageLabel")} />
</header>
