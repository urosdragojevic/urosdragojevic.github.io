---
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body
    class="prose lg:prose-lg dark:prose-invert bg-zinc-100 dark:bg-zinc-900 min-w-full min-h-screen mx-auto px-4 flex flex-col justify-between"
  >
    <SiteHeader />
    <main class="max-w-3xl md:mx-auto mb-10">
      <slot />
    </main>
    <SiteFooter />
  </body>
</html>
